  background-image: var(--banner-image);
  background-size: cover;
  background-position: center bottom; /* show the absolute bottom of the image */
  background-repeat: no-repeat;
  background-attachment: fixed;
  color:#fff;
  /* Lighten image with overlay */
  box-shadow:inset 0 0 0 2000px rgba(255,255,255,0.18);
    }
    header::after{
  display:none;
    }

    .name-wrap{container-type:inline-size;position:relative;z-index:1;}
    .name{
  /* font-family now set globally */
      
      white-space:nowrap;
      user-select:none;
  color: #fff;
  font-family: "Funnel Display", sans-serif;
  font-optical-sizing: auto;
  font-weight: 300;
  font-style: normal;
      font-size: clamp(10px, 6vw, 48px); /* ✅ smaller max */
      line-height:1;
      letter-spacing:.15em;
  /* text-shadow removed */
    }
    
    .syracuse{color:#D44500;font-weight:600}
    .name-left{justify-self:start}
    .name-right{justify-self:end}

    .tabs{display:flex;gap:10px;justify-content:center;align-items:center;position:relative;z-index:1}
    .tabs button{
  /* font-family now set globally */
      appearance:none;
      border:none;
      outline:none;
  background:transparent;
  color:#e0e0e0;
      padding:8px 14px;
      border-radius:0;
      cursor:pointer;
      letter-spacing:.05em;
      transition:background .15s ease, transform .05s ease;
      white-space:nowrap;
    }
    .tabs button:hover{background:rgba(255,255,255,.15)}
    .tabs button:active{transform:translateY(1px)}
    .tabs button.active{background:rgba(255,255,255,.25);color:#fff}
    .tabs button:focus-visible{box-shadow:inset 0 0 0 1px #fff}

    /* PANELS: horizontal swipe */
    .viewport{height:calc(100vh - var(--nav-h));overflow-x:auto;overflow-y:hidden;scroll-snap-type:x mandatory;scroll-behavior:smooth;display:flex;align-items:stretch}
  .panel{scroll-snap-align:start;flex:0 0 100%;min-width:100%;max-width:100vw;padding:32px clamp(16px,4vw,64px);border-right:1px solid #000;background:#fff}
    .panel:last-child{border-right:none}

  h1,h2{margin:0 0 16px;line-height:1.2;}
    h1{font-size:clamp(28px,5vw,44px);font-weight:500}
    h2{font-size:clamp(22px,4vw,32px);font-weight:400}
  p{margin:0 0 12px;}

  /* Timeline */
  .timeline{position:relative;min-height:1200px;margin:60px 0 40px}
    .timeline .line{position:absolute;left:50%;transform:translateX(-50%);top:0;bottom:0;width:2px;background:#000}
    .timeline .tick{position:absolute;left:calc(50% + 12px);bottom:var(--pos);font-size:12px}
    .timeline .item{position:absolute;width:50%;bottom:var(--pos,0%);max-width:520px}
    .timeline .item.left{left:0;padding-right:40px;text-align:right}
    .timeline .item.right{right:0;padding-left:40px;text-align:left}
    .timeline .marker{position:absolute;left:50%;transform:translate(-50%,50%);bottom:0;width:14px;height:14px;border:2px solid #000;background:#fff;border-radius:50%}
    .timeline .year{font-weight:700;margin-bottom:4px}
    .timeline .blurb{padding:0;background:#fff}

    /* Projects toggle + list */
