    .projects-list h3{margin:0 0 4px;font-size:18px}
    .projects-list p{margin:0;font-size:14px;color:#111}

    footer{padding:24px 0 8px;font-size:12px;color:#111}

    @media (max-width:900px){
      header{
        grid-template-columns:1fr;
