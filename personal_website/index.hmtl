  </style>
</head>
<body>
  <body class="funnel-display-main">
  <header class="lexend-exa-main">
    <div class="name-wrap name-left"><div class="name">Cameron Light</div></div>
    <div class="tabs" role="tablist" aria-label="Site Sections">
      <button type="button" data-index="0" class="active" role="tab" aria-selected="true">Main</button>
      <button type="button" data-index="1" role="tab" aria-selected="false">Timeline</button>
      <button type="button" data-index="2" role="tab" aria-selected="false">Projects</button>
    </div>
  </header>

  <div class="viewport" id="viewport" aria-live="polite">
    <section class="panel" id="panel-about">
     
      <h2 class="intro">My name is Cameron Light</h2> and I’m in my fourth and final year at <span class="syracuse">Syracuse University</span>.</h2>
      
      <footer>© <span id="year"></span> Cameron Light</footer>
    </section>

    <section class="panel" id="panel-timeline">
      <h2>Timeline</h2>
      <p>Bottom = 2018 • Top = 2025. Add items on the left/right of the line.</p>
      <div class="timeline">
        <div class="line"></div>
        <div class="tick" style="--pos:0%">2018</div>
        <div class="tick" style="--pos:14.2857%">2019</div>
        <div class="tick" style="--pos:28.5714%">2020</div>
        <div class="tick" style="--pos:42.8571%">2021</div>
        <div class="tick" style="--pos:57.1429%">2022</div>
        <div class="tick" style="--pos:71.4286%">2023</div>
        <div class="tick" style="--pos:85.7143%">2024</div>
        <div class="tick" style="--pos:100%">2025</div>

        <article class="item left" style="--pos:0%">
          <div class="marker"></div>
          <div class="year">2018</div>
          <div class="blurb">High School graduation</div>
        </article>
        <article class="item right" style="--pos:42.8571%">
          <div class="marker"></div>
          <div class="year">2021</div>
          <div class="blurb">Internship / major step</div>
        </article>
        <article class="item left" style="--pos:100%">
          <div class="marker"></div>
          <div class="year">2025</div>
          <div class="blurb">Present role</div>
        </article>
      </div>
    </section>

    <section class="panel" id="panel-projects">
      <h2>Projects</h2>
      <div class="project-toggle" role="tablist" aria-label="Project Category">
        <button type="button" data-filter="personal" class="on" aria-pressed="true">Personal</button>
        <button type="button" data-filter="academic" aria-pressed="false">Academic</button>
      </div>
      <ul class="projects-list">
        <li data-category="personal">
          <h3>Personal Project One</h3>
          <p>Short one-liner about what it is.</p>
        </li>
        <li data-category="personal">
          <h3>Personal Project Two</h3>
          <p>Stack, role, or outcome.</p>
        </li>
        <li data-category="academic">
          <h3>Academic Project One</h3>
          <p>Course, lab, or research blurb.</p>
        </li>
        <li data-category="academic">
          <h3>Academic Project Two</h3>
          <p>Methods, results, or impact.</p>
        </li>
      </ul>
    </section>
  </div>

  <script>
    document.getElementById('year').textContent = new Date().getFullYear();

    const viewport = document.getElementById('viewport');
    const tabs = document.querySelectorAll('.tabs button');
    const tabRoutes = ['about', 'timeline', 'projects'];

    function goTo(index, pushState = true){
      const w = viewport.clientWidth;
      viewport.scrollTo({left:w*index,behavior:'smooth'});
      tabs.forEach((b,i)=>{
        const on=i===index;
        b.classList.toggle('active',on);
        b.setAttribute('aria-selected',on?'true':'false');
      });
      if(pushState){
        history.pushState({tab:index}, '', `#${tabRoutes[index]}`);
      }
    }

    tabs.forEach(btn=>btn.addEventListener('click',()=>{
      goTo(parseInt(btn.dataset.index));
    }));

    let ticking=false;
    viewport.addEventListener('scroll',()=>{
      if(ticking) return;
      ticking=true;
      requestAnimationFrame(()=>{
        const i=Math.round(viewport.scrollLeft/viewport.clientWidth);
        tabs.forEach((b,idx)=>{
          const on=idx===i;
          b.classList.toggle('active',on);
          b.setAttribute('aria-selected',on?'true':'false');
        });
        history.replaceState({tab:i}, '', `#${tabRoutes[i]}`);
        ticking=false;
      });
    });

    window.addEventListener('keydown',(e)=>{
      if(e.key==='ArrowRight'||e.key==='PageDown'){
        e.preventDefault();
        const idx=[...tabs].findIndex(b=>b.classList.contains('active'));
        goTo(Math.min(2,idx+1));
      }
      if(e.key==='ArrowLeft'||e.key==='PageUp'){
        e.preventDefault();
        const idx=[...tabs].findIndex(b=>b.classList.contains('active'));
        goTo(Math.max(0,idx-1));
      }
    });

    window.addEventListener('popstate', (e) => {
      let idx = 0;
      if(location.hash){
        const hash = location.hash.replace('#','');
        idx = tabRoutes.indexOf(hash);
        if(idx === -1) idx = 0;
      }
      goTo(idx, false);
    });

    // On page load, go to tab based on hash
    (() => {
      let idx = 0;
      if(location.hash){
        const hash = location.hash.replace('#','');
        idx = tabRoutes.indexOf(hash);
        if(idx === -1) idx = 0;
      }
      goTo(idx, false);
    })();

    const projButtons=document.querySelectorAll('.project-toggle [data-filter]');
    const projItems=document.querySelectorAll('.projects-list [data-category]');
    function applyFilter(kind){
      projItems.forEach(li=>{
        li.style.display=(li.getAttribute('data-category')===kind)?'':'none';
      });
    }
    projButtons.forEach(btn=>{
      btn.addEventListener('click',()=>{
        projButtons.forEach(b=>{
          b.classList.remove('on');
          b.setAttribute('aria-pressed','false');
        });
        btn.classList.add('on');
        btn.setAttribute('aria-pressed','true');
        applyFilter(btn.getAttribute('data-filter'));
      });
    });
    applyFilter('personal');
  </script>
</body>
